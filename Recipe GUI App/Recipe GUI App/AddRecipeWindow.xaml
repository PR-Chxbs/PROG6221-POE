<Window x:Class="Recipe_GUI_App.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Recipe" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="RecipeNameTextBox" Margin="10"/>
            <TextBox x:Name="IngredientsTextBox" Margin="10"/>
            <TextBox x:Name="StepsTextBox"  Margin="10"/>
            <Button Content="Save Recipe" Click="SaveRecipe_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="Recipe_GUI_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe App" Height="350" Width="525">
    <Grid>
        <TextBlock Name="MyTextBlock"/>
        <StackPanel>
            <Button Content="Add New Recipe" Click="AddRecipe_Click" Margin="10"/>
            <Button Content="View All Recipes" Click="ViewRecipes_Click" Margin="10"/>
            <Button Content="Add Test Recipes" Click="AddTestRecipes_Click" Margin="10"/>
            <Button Content="Quit" Click="Quit_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="Recipe_GUI_App.ViewRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Recipes" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="RecipesListBox" Margin="10" SelectionChanged="RecipesListBox_SelectionChanged"/>
        <StackPanel VerticalAlignment="Center">
            <Button Name="BackButton" Content="Back" Width="70" Height="25" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

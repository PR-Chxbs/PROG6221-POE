<Window x:Class="Recipe_GUI_App.RecipeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Details" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock x:Name="RecipeDetailsTextBlock" Margin="10"/>
            <TextBox x:Name="ScaleFactorTextBox" Margin="10"/>
            <Button Content="Scale Recipe" Click="ScaleRecipe_Click" Margin="10"/>
            <Button Content="Reset Recipe" Click="ResetRecipe_Click" Margin="10"/>
            <Button Content="Delete Recipe" Click="DeleteRecipe_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
